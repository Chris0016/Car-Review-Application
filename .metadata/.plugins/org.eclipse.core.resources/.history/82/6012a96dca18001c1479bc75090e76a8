package application;

import java.sql.SQLException;

import javafx.event.ActionEvent;
import javafx.scene.control.Button;
import javafx.scene.control.Label;

public class UserReviewsController extends HomePaneMaster {
	
	
	
	@FXML
	private Button addReviews;
	
	public UserReviewsController() {
		super("SELECT *  FROM carreview.car_rating_avg");
	}
	
	@Override
	public void refresh(ActionEvent event) {
		super.calcRowSize();
		super.setDBAverages();
		super.gridPane.getChildren().clear();
		
		
		
		try {
			
			rs.first();
			Label node;
			for(int row = 0; row < ROW_SIZE  ; row++ ) {	 
				for (int col = 0; col < 3; col++) {
					node =(Label) gridPaneArray[row][col];
					node.setText( rs.getString(col+1) );
					
				}
				System.out.println();
				rs.next();
			}
			super.closeDB();
			
			
		} catch (SQLException e) {
			super.handleExceptions(e);
			e.printStackTrace();
		}	
		
	}
	
	public void addReview() {
		super.ROW_SIZE ++;
	}
}
